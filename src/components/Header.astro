<header id="header">
  <h1 class="header-title"><a href="/">PON DESIGN</a></h1>
  <nav class="header-nav">
    <ul>
      <li><a href="/news">NEWS</a></li>
      <li><a href="/service">SERVICE</a></li>
      <li><a href="/works">WORKS</a></li>
      <li><a href="/company">COMPANY</a></li>
      <li><a href="/recruit">RECRUIT</a></li>
      <li><a href="/contact">CONTACT</a></li>
    </ul>
  </nav>
  <button type="button" class="menu-btn">
    <span class="menu-line"></span>
  </button>
</header>

<style lang="scss">
  @import '../scss/main';

  header {
    width: 100%;
    height: 86px;
    padding: 0 30px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: fixed;
    z-index: 10;
    transition: all 0.3s;

    @include mq(md) {
      height: 64px;
      padding: 0 15px;
    }
  }
  header.is-active {
    height: 64px;
    background-color: #21054d;
  }

  header a {
    text-decoration: none;
    color: #fff;
  }

  header h1 {
    font-size: rem(24);

    @include mq(md) {
      font-size: rem(18);
    }
  }

  // ========================================
  // ヘッダーナビゲーション
  // ========================================
  .header-nav {
    @include mq(md) {
      visibility: hidden;
      opacity: 0;
      position: fixed;
      top: 0;
      left: 0;
      display: flex;
      justify-content: center;
      align-items: center;
      width: 100%;
      height: 100%;
      transition: all 0.3s ease;
      background-image: linear-gradient(135deg, #7633a4, #250d65);
    }
  }
  .header-nav.is-show {
    @include mq(md) {
      visibility: visible;
      opacity: 1;
    }
  }

  .header-nav ul {
    display: flex;
    align-items: center;
    gap: 30px;

    @include mq(lg) {
      gap: 20px;
    }

    @include mq(md) {
      flex-direction: column;
      justify-content: center;
      gap: 32px;
      width: 100%;
    }

    li {
      list-style: none;
      font-size: rem(14);
      font-weight: bold;

      @include mq(md) {
        font-size: rem(16);
      }
    }
  }

  // ========================================
  // メニューボタン
  // ========================================
  .menu-btn {
    display: none;
    cursor: pointer;

    @include mq(md) {
      position: relative;
      z-index: 100;
      display: flex;
      justify-content: center;
      align-items: center;
      width: 40px;
      height: 40px;
      padding: 5px;
      opacity: 0.9;
      border: none;
      outline: none;
    }

    .menu-line {
      display: block;
      position: relative;
      left: 0;
      width: 100%;
      height: 2px;
      border-radius: 4px;
      transition: all 0.4s;
      background-color: #fff;
    }
    .menu-line::before,
    .menu-line::after {
      content: '';
      position: absolute;
      display: block;
      width: 100%;
      height: 100%;
      transition: inherit;
      border-radius: 4px;
      background-color: inherit;
    }
    .menu-line::before {
      top: -8px;
    }
    .menu-line::after {
      top: 8px;
    }
  }

  .menu-btn.is-active .menu-line {
    background-color: transparent; // 中心線は透過
  }
  .menu-btn.is-active .menu-line::before,
  .menu-btn.is-active .menu-line::after {
    top: 0;
    background-color: #fff;
  }
  .menu-btn.is-active .menu-line::before {
    transform: rotate(45deg);
  }
  .menu-btn.is-active .menu-line::after {
    transform: rotate(-45deg);
  }
</style>

<script>
  const menuBtn = document.querySelector('.menu-btn')!;
  const headerNav = document.querySelector('.header-nav')!;
  menuBtn.addEventListener('click', () => {
    menuBtn.classList.toggle('is-active'); // メニューボタン
    headerNav.classList.toggle('is-show'); // ヘッダーナビゲーション
  });

  const header = document.querySelector('#header')!;
  window.addEventListener('scroll', () => {
    if (window.scrollY > 0) {
      header.classList.add('is-active');
    } else {
      header.classList.remove('is-active');
    }
  });
</script>
