---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Hero from './section/Hero.astro';
import News from './section/News.astro';
import Service from './section/Service.astro';
import Works from './section/Works.astro';
import EyeCatch from '../../components/EyeCatch.astro';
---

<Layout title="PON DESIGN">
  <Header />
  <Hero />
  <main>
    <News />
    <Service />
    <Works />
    <EyeCatch>
      <div class="company-heading">
        <h2>COMPANY</h2>
        <p>私たちについて</p>
      </div>
    </EyeCatch>
  </main>
</Layout>

<style lang="scss">
  @import '../../scss/main';

  .company-heading {
    h2 {
      @include section-title;
    }
    p {
      @include section-sub-title;
    }
  }
</style>
