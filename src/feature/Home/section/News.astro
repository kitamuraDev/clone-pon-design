---
type NewsListItems = {
  datetime: string;
  datetimeDisplay: string;
  category: string;
  title: string;
}[];
const newsListItems: NewsListItems = [
  {
    datetime: '2023-03-12',
    datetimeDisplay: '2023.03.12',
    category: 'お知らせ',
    title: 'Webデザインニュースサイト「ウェブマガジン」に取材いただきました',
  },
  {
    datetime: '2023-03-13',
    datetimeDisplay: '2023.03.13',
    category: '制作実績',
    title: 'Smoothiesta様のWebサイトを制作いたしました',
  },
  {
    datetime: '2023-03-14',
    datetimeDisplay: '2023.03.14',
    category: '採用',
    title: 'Webデザイナーを１名募集中です！',
  },
];
---

<section id="news">
  <div class="news-heading">
    <h2>NEWS</h2>
    <p>お知らせ</p>
  </div>
  <div class="news-body">
    <ul class="news-list">
      {
        newsListItems.map((item) => (
          <li class="news-list-item">
            <div class="news-list-item-head">
              <time class="news-list-item-date" datetime={item.datetime}>
                {item.datetimeDisplay}
              </time>
              <p class="news-list-item-category">{item.category}</p>
            </div>
            <a href="#" class="news-list-item-link">
              {item.title}
            </a>
          </li>
        ))
      }
    </ul>
  </div>
</section>

<style lang="scss">
  @import '../../../scss/main';

  #news {
    width: min(100%, 950px);
    margin-inline: auto;
    padding: 70px 15px;
    display: flex;
    gap: 50px;

    @include mq(md) {
      flex-direction: column;
      gap: 30px;
      padding: 40px 15px;
    }
  }

  .news-heading {
    @include mq(md) {
      text-align: center;
    }

    h2 {
      @include section-title;
    }
    p {
      @include section-sub-title;
    }
  }

  .news-body {
    flex: 1;
  }

  .news-list {
    list-style: none;
  }
  .news-list-item {
    display: flex;
    align-items: center;
    gap: 20px;
    margin-bottom: 15px;

    @include mq(md) {
      flex-direction: column;
      align-items: flex-start;
      gap: 3px;
      margin-bottom: 30px;
    }

    .news-list-item-link {
      text-decoration: none;
      font-size: rem(14);
      color: inherit;
      letter-spacing: 0.05em;
    }
  }
  .news-list-item-head {
    display: flex;
    align-items: center;
    gap: 20px;

    .news-list-item-date {
      font-size: rem(14);
      letter-spacing: 0.05em;
    }
    .news-list-item-category {
      text-align: center;
      font-size: rem(12);
      font-weight: 700;
      width: 80px;
      padding: 4px 10px;
      border-radius: 80px;
      background-color: #e8e8e8;

      @include mq(md) {
        font-size: rem(11);
      }
    }
  }
</style>
